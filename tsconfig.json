{
	"compilerOptions": {
		"declaration": true,
		"importHelpers": false,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"outDir": "dist",
		"rootDir": "src",
		"noImplicitAny": true,
		"strict": true
	},
	"include": ["src/**/*"]
}
